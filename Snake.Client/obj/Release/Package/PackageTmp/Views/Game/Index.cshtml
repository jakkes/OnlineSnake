@model Snake.Client.Models.UserModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Play</title>
    <script src="/Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">
        var Token = "@Model.Token";
    </script>
</head>
<body style="background-color:black">
    <div>
        
        <div style="width:1000px;margin:0 auto;">
            <canvas style="background-color:white;border-radius:500px;" width="1000" height="1000" id="game"></canvas>
            <p id="ScoreLb" style="position:absolute;color:white;font-family:Arial;top:30px;left:20px;"></p>
            <p id="LeaderLb" style="position:absolute;color:white;font-family:Arial;top:70px;left:20px;"></p>
            <p id="AllTimeLeaderLb" style="position:absolute;color:white;font-family:Arial;top:100px;left:20px;"></p>
            <p id="LatencyLb" style="position:absolute;color:white;font-family:Arial;top:30px;right:20px;"></p>
        </div>

    </div>

    <script src="~/Content/Game.js"></script>

</body>
</html>
